/* pages/Certificate/Certificate.wxss */
page {
    background-color: #fff;
}

/*证书 */
.canvasMain {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    align-content: center;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 9999;
}

.canvasMain canvas {
    margin-bottom: 40px;
}

.canvas2d {
    width: 300rpx;
    height: 80rpx;
    font-size: 32rpx;
    color: rgb(255, 0, 0);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2rpx solid rgb(122, 23, 23);
    margin: auto;
}

.text {
    width: 600rpx;
    height: 280rpx;
    font-size: 32rpx;
    color: #000;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: auto;
    
}
.gif{
    width: 600rpx;
    height: 280rpx;
    display: flex;
    justify-content: center; 
    /* margin: auto; */
}

.canvasMain .button {
    height: 80rpx;
    width: 600rpx;
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 40px;
    color: #fff;
    font-size: 16px;
    line-height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.canvasMain .x {
    width: 35px;
    height: 35px;
    margin-top: 10px;
    border: solid 2px #fff;
    border-radius: 50%;
    padding: 0px;
}